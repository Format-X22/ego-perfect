		img(id="image-1016", src="/resources/img/logo.svg", alt="Логотип")
		div(id="component-1017")
			| Визуальная поисковая система компаний и услуг
		div(role="presentation" id="container-1018")
			div(id="container-1018-innerCt", role="presentation")
				div(id="container-1018-targetEl", role="presentation")
					div(role="presentation", id="textfield-1019")
						label(id="textfield-1019-labelEl", for="textfield-1019-inputEl")
							span
								span(id="textfield-1019-labelTextEl")
						div(id="textfield-1019-bodyEl", role="presentation")
							div(id="textfield-1019-triggerWrap", role="presentation")
								div(id="textfield-1019-inputWrap", role="presentation")
									div(style='padding: 30px'): input(
										style='width: 300px;',
										id="textfield-1019-inputEl",
										type="search",
										size="1",
										name="textfield-1019-inputEl",
										placeholder="Что ищем? Например - химчистка",
										role="textbox",
										aria-hidden="false",
										aria-disabled="false",
										aria-readonly="false",
										aria-invalid="false",
										aria-required="false",
										autocomplete="off"
									)
							div(id="textfield-1019-ariaErrorEl", role="alert", aria-live="polite", class="x-hidden-clip")
					div(style='padding: 30px'): a(hidefocus="on", unselectable="on", role="button", aria-hidden="false", aria-disabled="false", id="button-1020", tabindex="0")
						span(id="button-1020-btnWrap", role="presentation", unselectable="on")
							span(id="button-1020-btnEl", role="presentation", unselectable="on")
								span(id="button-1020-btnIconEl", role="presentation", unselectable="on")
