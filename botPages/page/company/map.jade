extends ../../main

block meta
	title Фирмы онлайн | #{name} на карте
	meta(name="keywords", content="фирмы онлайн, компания на карте")
	meta(name="description", content="Расположение компании #{name} на карте.")

block body
	h1 Компания #{name} на карте
	div(itemscope, itemtype="http://schema.org/Place")
		span(itemprop="name") #{name}
		div(itemprop="geo", itemscope, itemtype="http://schema.org/GeoCoordinates")
			- map = map || {};
			meta(itemprop="latitude", content="#{map.lat}")
			meta(itemprop="longitude", content="#{map.lng}")