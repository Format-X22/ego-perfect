extends shared/public-base

block content
	form(action='/register', method='POST').container
		.start-search-desktop-offset.hidden-xs
		.row
			img.center-block(src='static/img/logo.svg', width='240', height="200")
		.row
			.col-md-offset-3.col-md-6
				.form-group
					.input-group
						.input-group-addon
							span.glyphicon.glyphicon-envelope
						input.form-control(name='login', type='email', placeholder='boss@mail.com', autocomplete='email', autofocus)
		.row
			.col-md-offset-3.col-md-6
				.form-group
					.input-group
						.input-group-addon
							span.glyphicon.glyphicon-cog
						input.form-control(name='key', type='text', placeholder='ключ агента, если он у вас есть')
		.row
			.col-md-offset-3.col-md-6.form-right-buttons
				button.btn.btn-primary.right(type='submit') Регистрация